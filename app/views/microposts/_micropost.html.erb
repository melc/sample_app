<li>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <% if current_sample_user?(micropost.sample_user) %>
    <%= link_to "delete", micropost, method: :delete, data: { confirm: "Are you sure?" }, title: micropost.content %>
  <% end %>  
</li>
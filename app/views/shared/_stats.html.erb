<% @sample_user ||= current_sample_user %>
<div class="stats">
  <a href="<%= following_sample_user_path(@sample_user) %>">
    <strong id="following" class="stat">
      <%= @sample_user.followed_sample_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_sample_user_path(@sample_user) %>">
    <strong id="followers" class="stat">
      <%= @sample_user.followers.count %>
    </strong>
    followers
  </a>
</div>
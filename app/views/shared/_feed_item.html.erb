<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.sample_user), feed_item.sample_user %>
  <span class="user">
    <%= link_to feed_item.sample_user.name, feed_item.sample_user %>
  </span>
  <span class="content"><%= feed_item.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_sample_user?(feed_item.sample_user) %>
    <%= link_to "delete", feed_item, method: :delete, data: { confirm: "Are you sure?" }, title: feed_item.content %>
  <% end %>  
</li>